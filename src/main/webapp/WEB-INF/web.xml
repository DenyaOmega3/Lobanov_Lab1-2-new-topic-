<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>servlet.BaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/base</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/jsp/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/mainpage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignIn</servlet-name>
        <jsp-file>/jsp/sign_in.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <jsp-file>/jsp/sign_up.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateHomework</servlet-name>
        <jsp-file>/jsp/update_homework.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateHomework</servlet-name>
        <url-pattern>/updatehomework</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <jsp-file>/jsp/create_group.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/creategroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddHomework</servlet-name>
        <jsp-file>/jsp/add_homework.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddHomework</servlet-name>
        <url-pattern>/newhomework</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentToGroup</servlet-name>
        <jsp-file>/jsp/student_to_group.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentToGroup</servlet-name>
        <url-pattern>/studenttogroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <jsp-file>/jsp/update_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/updateuser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SwitchGroup</servlet-name>
        <jsp-file>/jsp/switch_group.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SwitchGroup</servlet-name>
        <url-pattern>/switchgroup</url-pattern>
    </servlet-mapping>
</web-app>

